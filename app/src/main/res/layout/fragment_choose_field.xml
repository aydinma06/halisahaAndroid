<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/LightSteelBlue">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LightSteelBlue"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="56dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/logoball3" />

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#00B0FF"
                android:layout_margin="8dp">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="KahramanmaraÅŸ"
                    app:ms_arrow_tint="@android:color/white"
                    app:ms_background_color="#00B0FF"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="650dp"
                    app:ms_text_color="@android:color/white" />

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#00B0FF"
                android:layout_margin="8dp">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/iron"
                    app:ms_arrow_tint="@android:color/white"
                    app:ms_background_color="#00B0FF"
                    app:ms_dropdown_height="wrap_content"
                    app:ms_dropdown_max_height="650dp"
                    app:ms_text_color="@android:color/white" />

            </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/chooseDateText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="MM/DD/YYYY"
                    android:inputType="datetime"
                    android:focusable="false"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_query"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:padding="12dp"
                android:text="Sorgu Yap"
                android:background="#00B0FF"/>


        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>