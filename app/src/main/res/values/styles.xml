<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/royalblue</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">true
        </item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">true
        </item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">
            @android:transition/move
        </item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">
            @android:transition/move
        </item>

        <item name="colorPrimary">@color/royalblue</item>
        <item name="colorPrimaryDark">@color/royalblue</item>
        <item name="colorAccent">@color/royalblue</item>

        <item name="android:windowBackground">@color/seffaf_beyaz_yuzde_70</item>

        <item name="colorControlNormal">@color/royalblue</item>
        <item name="colorControlActivated">@color/royalblue</item>
        <item name="colorControlHighlight">@color/royalblue</item>
        <item name="android:textColorHint">@color/royalblue</item>

        <item name="colorButtonNormal">@color/royalblue</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/royalblue</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/royalblue</item>
    </style>

    <style name="AppTheme.Alert.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.Sphinx</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:windowBackground">@color/royalblue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="DialogWindowTitle.Sphinx" parent="AppTheme.Alert.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.Sphinx.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance.Sphinx.DialogWindowTitle" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/iron</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Dark.Menu" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/royalblue</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">true
        </item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">true
        </item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">
            @android:transition/move
        </item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">
            @android:transition/move
        </item>

        <item name="colorPrimary">@color/royalblue</item>
        <item name="colorPrimaryDark">@color/royalblue</item>
        <item name="colorAccent">@color/royalblue</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="colorControlNormal">@color/royalblue</item>
        <item name="colorControlActivated">@color/royalblue</item>
        <item name="colorControlHighlight">@color/iron</item>
        <item name="android:color">@color/red</item>
        <item name="android:textColorHint">@color/royalblue</item>

        <item name="colorButtonNormal">@color/royalblue</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/royalblue</item>
    </style>


</resources>
